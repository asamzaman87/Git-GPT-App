{
  "name": "chatgpt-github-pr-reviewer",
  "version": "1.0.0",
  "description": "A ChatGPT app for reviewing GitHub Pull Requests using MCP",
  "private": true,
  "workspaces": [
    "server",
    "widget"
  ],
  "scripts": {
    "dev": "npm run dev:server",
    "dev:server": "npm run dev --workspace=server",
    "dev:widget": "npm run dev --workspace=widget",
    "build": "npm run build:widget && npm run build:server",
    "build:server": "npm run build --workspace=server",
    "build:widget": "npm run build --workspace=widget",
    "start": "npm run start --workspace=server",
    "clean": "rm -rf node_modules server/node_modules widget/node_modules server/dist widget/dist"
  },
  "keywords": [
    "chatgpt",
    "mcp",
    "github",
    "pull-requests",
    "openai",
    "apps-sdk"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
